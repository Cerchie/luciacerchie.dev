---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

const title = 'About';
const description = 'About your blog.';
const permalink = `${Astro.site.href}about`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
    <h1>About</h1>
    <figure class="about-image">
      <Image
      src="https://github.com/Cerchie.png"
      alt="GitHub profile picture"
      width={200}
      height={200}
    />
    </figure>
    <p>I'm obssessed with making developer-centered tooling experiences.</p>
    <p>Currently working at <a href="https://developer.confluent.io/">Confluent</a>.</p>

  </div>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
